<header class="navbar navbar-expand-lg navbar-light" style="background-color: #ffffff;">
  <%= link_to "Tone", root_path, class: "navbar-brand" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav mr-auto">
      <% if logged_in? && current_user.admin? %>
        <li class="nav-item">
          <%= link_to "ユーザー一覧", "#", class: "nav-link" %>
        </li>
      <% end %>
      <% if logged_in? %>
        <li class="nav-item">
          <%= link_to timeline_posts_path, class: "nav-link" do %>
            <i class="fas fa-stream"></i><%= " タイムライン" %>
          <% end %>
        </li>
      <% end %>
      <li class="nav-item">
        <%= link_to popular_posts_path, class: "nav-link" do %>
          <i class="fas fa-fire-alt"></i><%= " 人気" %>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to posts_path, class: "nav-link" do %>
          <i class="fas fa-seedling"></i><%= " 新着" %>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to feature_posts_path, class: "nav-link" do %>
          <i class="fas fa-heart"></i><%= " 注目の写真" %>
        <% end %>
      </li>
    </ul>

    <ul class="navbar-nav">
      <% if logged_in? %>
        <li class="nav-item">
          <%= link_to "新規投稿", new_post_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= link_to "メニュー", "#", class: "nav-link dropdown-toggle", id: "navbarDropdown", role: "button", data: {toggle: "dropdown"}, aria: {haspopup: "true", expanded: "false"} %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "マイページ", current_user, class: "dropdown-item" %>
            <%= link_to "ログアウト", logout_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "新規登録", signup_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ログイン", login_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</header>
