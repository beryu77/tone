<div class="row">
  <% @posts.each do |post| %>
    <div class="col-lg-4 col-md-6 card-index">
      <div class="card PhotoBox">
        <%= link_to image_tag(post.image.thumb.url.to_s, class: 'post_image_index img-fluid', alt: 'post image'), post %>
        <div class="SlideBox">
          <span class="mr-2">いいね<%= post.likes.count %></span>
          <span>コメント<%= post.comments.count %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  $(document).on("turbolinks:load", function() {
    $(".PhotoBox").hover(function(){
      $(".SlideBox",this).stop().animate({bottom:"0px"},"fast");
    },function(){
      $(".SlideBox",this).stop().animate({bottom:"-70px"},"slow");
    });
  })
</script>
