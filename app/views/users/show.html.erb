<% provide(:title, 'マイページ') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <% if @user.posts.any? %>
        <ol class="posts">
          <%= render @posts %>
        </ol>
          <%= paginate @posts %>
      <% end %>
    </div>



    <div class="mx-auto">
      <div class="">
        <div class="user_info">
          <% if @user.avatar? %>
            <%= image_tag(@user.avatar.url, size: '200x200', class: 'avatar_present_img rounded-circle z-depth-0 avatar-image', alt: 'avatar image') %>
          <% else %>
            <%= image_tag("no-avatar.png", size: "200x200", class: "avatar_present_img rounded-circle z-depth-0 avatar-image", alt: "avatar image") %>
          <% end %>    
        </div>
        <div class="d-flex flex-column mt-3">
          <div class="user-name mx-auto">
            <div class="font-weight-bold pb-2">
              <%= @user.name %>
            </div>
          </div>
          <div class="user-status mx-auto">
            <span class="status-value"><%= "投稿#{@user.posts.count.to_s(:delimited)}件" %></span>
          </div>
          <div class="user-status mx-auto">
        <%# <span class="status-value"><%= "フォロワー#{@user.followers.count.to_s(:delimited)}人" %></span>
        <%# <span class="status-value"><%= "フォロー#{@user.followings.count.to_s(:delimited)}人" %></span>
          </div>

        </div>
      </div>
    </div>    
  </div> 
</div>

