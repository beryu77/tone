<% provide(:title, 'Sign up') %>
<div class="body">
  <h1>ユーザー登録</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with model: @user, local: true, url: signup_path do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name, "ユーザーネーム" %>
        <%= f.text_field :name, class: 'form-controll' %>

        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: 'form-controll' %>

        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: 'form-controll' %>

        <%= f.label :password_confirmation, "確認用パスワード" %>
        <%= f.password_field :password_confirmation, class: 'form-controll' %>

        <%= f.submit "アカウント作成", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>