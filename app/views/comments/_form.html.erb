<%= render "shared/error_messages" %>

<div class="comment-form-box col-lg-10 mx-auto mt-5 pb-3">
  <p class="comment-form-title far fa-comment-alt">コメント</p>
  <%= form_with model: [@post, @comment], remote: true do |f| %>
    <%= f.text_area :comment, class: "form-control", rows: 5 %>
    <div class="row d-flex justify-content-center col-lg-4 col-md-6 float-right">
      <%= f.submit "コメントを送信", class: "btn btn-dark" %>
    </div>
  <% end %>
</div>
