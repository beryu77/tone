<%= render "shared/error_messages" %>
<div class="body">
  <div class="row mt-5">
    <div class="col-md-8 mx-auto offset-3">
    <h2>コンテスト作成</h2>
    
      <%= form_with model: @contest, local: true do |f| %>
        <%= f.label :title, "コンテスト名" %>
        <%= f.text_field :title, class: "form-control" %>  
        
        <%= f.label :main, "コンテスト内容" %>
        <%= f.text_area :main, class: "form-control" %>
        
        <%= f.label :condition, "応募要項" %>
        <%= f.text_area :condition, class: "form-control" %>

        <%= f.label :image, "投稿する写真をアップロードしてください" %>
        <%= f.file_field :image, accept: "image/jpg,image/jpeg,image/gif,image/png", class: "image" %>
        
        <%= f.submit "作成する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
